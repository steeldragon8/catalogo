---
import BaseLayout from "../layouts/BaseLayout.astro";
import { Image } from "astro:assets";
import containers from "../assets/containers.jpg"
import shackles from "../assets/shackles.jpeg"
import cableSling from "../assets/cable-sling.jpeg"
import polyesterSlings from "../assets/polyester-slings.jpeg"
import steelChains from "../assets/steel-chains.jpeg"
import accesories from "../assets/misc-tools.jpeg"
---

<BaseLayout pageTitle="Catálogo">
    <main>
        <h1 transition:animate="slide" class="wrapper grid gap-8 text-center text-3xl md:text-4xl md:mt-24 font-semibold mt-6">Catálogo de Herramientas</h1>
        <section transition:animate="slide" class="wrapper py-14 md:py-24 grid gap-12 md:grid-cols-2 lg:grid-cols-3 md:text-left">
            <article>
                <div class="w-full rounded-t-xl overflow-hidden">
                    <a href="/spreaders">
                        <Image 
                            src={containers}
                            alt="Carga y Descarga de Contenedores"
                            class="transition-all duration-700 hover:scale-125 w-full"
                        />
                    </a>
                </div>
                <div class="py-14 px-16 md:py-10 md:px-12 bg-gray-200 rounded-b-xl">
                    <a href="/spreaders" class="text-3xl  md:text-2xl text-zinc-900">
                        Spreaders y Separadores
                    </a>
                </div>
            </article>
            <article>
                <div class="w-full rounded-t-xl overflow-hidden">
                    <a href="/hooks">
                        <Image 
                            src={shackles}
                            alt="Carga y Descarga de Contenedores"
                            class="transition-all duration-700 hover:scale-125 w-full"
                        />
                    </a>
                </div>
                <div class="py-14 px-16 md:py-10 md:px-12 bg-gray-200 rounded-b-xl">
                    <a href="/hooks" class="text-3xl  md:text-2xl text-zinc-900">
                        Ganchos y Grilletes
                    </a>
                </div>
            </article>
            <article>
                <div class="w-full rounded-t-xl overflow-hidden">
                    <a href="/steel-cable-slings">
                        <Image 
                            src={cableSling}
                            alt="Carga y Descarga de Contenedores"
                            class="transition-all duration-700 hover:scale-125 w-full"
                        />
                    </a>
                </div>
                <div class="py-14 px-16 md:py-10 md:px-12 bg-gray-200 rounded-b-xl">
                    <a href="/steel-cable-slings" class="text-3xl  md:text-2xl text-zinc-900">
                        Estrobos
                    </a>
                </div>
            </article>
            <article>
                <div class="w-full rounded-t-xl overflow-hidden">
                    <a href="/synthetic-slings">
                        <Image 
                            src={polyesterSlings}
                            alt="Carga y Descarga de Contenedores"
                            class="transition-all duration-700 hover:scale-125 w-full"
                        />
                    </a>
                </div>
                <div class="py-14 px-16 md:py-10 md:px-12 bg-gray-200 rounded-b-xl">
                    <a href="/synthetic-slings" class="text-3xl  md:text-2xl text-zinc-900">
                        Eslingas
                    </a>
                </div>
            </article>
            <article>
                <div class="w-full rounded-t-xl overflow-hidden">
                    <a href="/chains">
                        <Image 
                            src={steelChains}
                            alt="Carga y Descarga de Contenedores"
                            class="transition-all duration-700 hover:scale-125 w-full"
                        />
                    </a>
                </div>
                <div class="py-14 px-16 md:py-10 md:px-12 bg-gray-200 rounded-b-xl">
                    <a href="/chains" class="text-3xl  md:text-2xl text-zinc-900">
                        Cadenas
                    </a>
                </div>
            </article>
            <article>
                <div class="w-full rounded-t-xl overflow-hidden">
                    <a href="/misc-tools">
                        <Image 
                            src={accesories}
                            alt="Carga y Descarga de Contenedores"
                            class="transition-all duration-700 hover:scale-125 w-full"
                        />
                    </a>
                </div>
                <div class="py-14 px-16 md:py-10 md:px-12 bg-gray-200 rounded-b-xl">
                    <a href="/misc-tools" class="text-3xl  md:text-2xl text-zinc-900">
                        Herramientas varias
                    </a>
                </div>
            </article>
        </section>
    </main>
</BaseLayout>