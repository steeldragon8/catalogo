---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
const tags = [
        ...new Set(
            allPosts.map(
                (post) => post.data.tags
            ).flat()
        )
    ];
---

<BaseLayout pageTitle="Etiquetas">
    <div class="flex flex-wrap">
        {
            tags.map(
                (tag) => (
                    <p class="m-1 border-dotted border-[1px] border-blue-800 rounded-lg text-base bg-blue-200">
                        <a href={`/tags/${tag}`}>
                            { tag }
                        </a>
                    </p>
                )
            )
        }
    </div>
</BaseLayout>