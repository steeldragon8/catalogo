---
import BaseLayout from "../layouts/BaseLayout.astro";
import BlogPost from "../components/BlogPost.astro";
import { getCollection } from "astro:content";

const allPosts = await getCollection("posts");
---

<BaseLayout pageTitle="Soporte">
    <main>
        <h1 transition:animate="slide" class="text-4xl text-blue-950 text-center font-semibold mt-12 md:mt-16">Documentos t√©cnicos</h1>

        <section transition:animate="slide" class="wrapper text-center py-10 md:py-20 grid gap-12 md:text-left">
            <article>
                <div class="grid gap-8 md:gap-12 md:grid-cols-3">
                    {
                        allPosts.map((post) => (
                            <BlogPost 
                                url={`/posts/${post.slug}`} 
                                title={post.data.title} 
                                /* img={post.data.cover} */
                            />
                        ))
                    }
                </div>
            </article>
        </section>
    </main>
</BaseLayout>