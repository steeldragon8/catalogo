---
import BaseLayout from "../layouts/BaseLayout.astro";
import { getCollection } from "astro:content";
import LiftingHooks from "../components/Hook.astro";
import LiftingShackle from "../components/Shackle.astro";

const allHooks = await getCollection("hooks");
const allShackles = await getCollection("shackles");
---

<BaseLayout pageTitle="Soporte">
    <main>
        <h1 transition:animate="slide" class="text-4xl text-blue-950 text-center font-semibold mt-12 md:mt-16">Ganchos para izaje</h1>

        <section transition:animate="slide" class="wrapper text-center py-16 md:py-20 grid gap-12 md:text-left">
            <article>
                <div class="grid gap-8 md:gap-12 md:grid-cols-1 lg:grid-cols-2">
                    {
                        allHooks.map((hook: any) => (
                            <LiftingHooks 
                                name={hook.data.name} 
                                swl={hook.data.swl}
                                wt={hook.data.wt}
                                df={hook.data.df}
                                image={hook.data.image}
                            />
                        ))
                    }
                </div>
            </article>

            <article>
                <h2 transition:animate="slide" class="text-4xl text-blue-950 text-center font-semibold mt-12 md:mt-16 mb-16">Grilletes</h2>

                <div class="grid gap-8 md:gap-12 md:grid-cols-1 lg:grid-cols-2">
                    {
                        allShackles.map((shackle: any) => (
                            <LiftingShackle 
                                name={shackle.data.name} 
                                swl={shackle.data.swl}
                                pin={shackle.data.pin}
                                wt={shackle.data.wt}
                                df={shackle.data.df}
                                image={shackle.data.image}
                            />
                        ))
                    }
                </div>
            </article>
        </section>
    </main>
</BaseLayout>