---
import { Image } from "astro:assets";

export interface Props {
    name: string;
    swl: string;
    wt: string;
    lgth: string
    image: string;
}

const { name, swl, wt, lgth, image } = Astro.props;
---

<div class="md:grid grid-cols-[1fr_2fr]">
    <div class="w-full rounded-t-xl md:rounded-tr-none md:rounded-l-xl overflow-hidden">
        <Image
            src={image}
            alt={name}
            width={100}
            height={100}
            class="transition-all duration-700 hover:scale-125 w-full"
        />
    </div>
    
    <div class="py-8 px-4 md:py-10 md:px-12 bg-gray-200 rounded-b-xl md:rounded-bl-none md:rounded-r-xl hover:bg-blue-200 hover:text-blue-950">
        <p class="text-2xl lg:text-lg font-semibold text-zinc-900">
            { name }
        </p>
        <p class="text-2xl lg:text-lg text-zinc-900">
            Capacidad: { swl }
        </p>
        <p class="text-2xl lg:text-lg text-zinc-900">
            Tara: { wt }
        </p>
        <p class="text-2xl lg:text-lg text-zinc-900">
            Longitud: { lgth }
        </p>
    </div>
</div>